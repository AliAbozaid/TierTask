<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Tier" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/background</item>
		<item name="colorPrimaryVariant">@android:color/transparent</item>
		<item name="colorOnPrimary">@color/background</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">
			?attr/colorPrimaryVariant
		</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true
		</item>
		<item name="colorPrimaryDark">@color/background</item>
		<item name="colorAccent">@color/background</item>
		<item name="android:windowBackground">@null</item>

	</style>

	<style name="SplashTheme" parent="Theme.Tier">
		<item name="android:windowBackground">@drawable/tier_spalsh
		</item>
		<item name="android:windowAnimationStyle">@null</item>
	</style>

	<style name="AppButton.Text.Main" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/btn_normal_height</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/text_17</item>
		<item name="android:gravity">center</item>
		<item name="textAllCaps">false</item>
		<item name="cornerRadius">@dimen/default_corner_size</item>
		<item name="backgroundTint">@color/button_bg</item>
		<item name="android:clickable">true</item>
		<item name="android:background">@null</item>
		<item name="android:letterSpacing">-0.01</item>
	</style>


</resources>